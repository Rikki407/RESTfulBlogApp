<% include partials/header.ejs%>
<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attatched">
        <div class="item">
                <img class="ui centered rounded image" src="<%=blog.image%>">
            <div class="content">
                <span><strong><%=blog.created.toDateString()%></strong></span>
            </div>
            <div class="description">
                <span><%=blog.body%></span>
            </div>
        </div>
    </div>
    <a class="ui orange inverted button" href="/blogs/<%=blog._id%>/edit">Edit</a>
    <form id="delete" action="/blogs/<%=blog.id%>?_method=DELETE" method="post">
        <button class="ui red inverted button">Delete</button>
    </form>
</div>
<% include partials/footer.ejs%>
